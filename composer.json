{
  "name": "mike182uk/cart",
  "description": "A flexible and modern shopping cart package",
  "license": "MIT",
  "authors": [
    {
      "name": "Michael David Barrett",
      "email": "mike182uk@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "mockery/mockery": "~0.0",
    "halleck45/phpmetrics": "*",
    "sebastian/phpcpd": "*",
    "phpmd/phpmd": "@stable",
    "pdepend/pdepend": "2.2.2",
    "phploc/phploc": "*",
    "fabpot/php-cs-fixer": "1.11"
  },
  "autoload": {
    "psr-4": {
      "Cart\\": "src"
    }
  },
  "config": {
    "bin-dir": "bin"
  },
  "scripts": {
    "check": [
      "phploc ./src",
      "php-cs-fixer fix ./src --dry-run --diff",
      "pdepend --summary-xml=/tmp/summary.xml ./src",
      "phpmd ./src text codesize,unusedcode,naming",
      "phpcpd ./src",
      "phpmetrics ./src"
    ],
    "fix": [
      "php-cs-fixer fix ./src --level=psr2",
      "php-cs-fixer fix ./tests --level=psr2"
    ],
    "test": "phpunit"
  }
}
